                                <GridRow Gutter="(8,8)">
                                    @switch (context.CurrentStatusId)
                                    {
                                        case 6:
                                            <GridCol Flex="@("none")">
                                                <button class="button-color shadow rounded"
                                                        type="button"
                                                        style="border-radius: 8px !important; color: #ffffff; border: none; padding: 5px 20px;"
                                                        @onclick="() => UploadAgreementPremise(context.LoanRequestId)">
