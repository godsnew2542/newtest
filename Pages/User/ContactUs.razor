<div class="container-fluid mt-2 mb-5 pb-5">

    <UserManualComponents Url="Files/Manual/Loan_User_Manual/LOAN_User_Manual/index.html" />

    <div class="my-3">
        <Card>
            <TitleTemplate>
                <GridRow Gutter="(8,8)" Align="middle">
                    <GridCol Flex="@("auto")">
                        <div class="font-color" style="font-size:medium">
                            <i class="fa-solid fa-address-book fa-lg mx-2"></i>
                            <strong>ติดต่อเรา</strong>
                        </div>
                    </GridCol>
