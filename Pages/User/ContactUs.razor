    <GridRow Gutter="(16,16)">
        @* วิทยาเขต หาดใหญ่ *@
        <GridCol Xxl="8" Xl="12" Lg="12" Md="24" Sm="24" Xs="24">
            <Card Bordered=false Style="@(StaffDetail?.CampId == "01" ? BgColor : "")">
                <Body>
                    <GridRow Gutter="(8,8)">
                        <GridCol Flex="@("auto")">
                            <h6>
                                <strong>
                                    วิทยาเขต หาดใหญ่
                                </strong>
                            </h6>
                        </GridCol>
                        @if (StaffDetail?.CampId == "01")
                        {
                            <GridCol Flex="@("none")">
                                <i class="fa-solid fa-star fa-2xl" style="color: #FFD43B;"></i>
                            </GridCol>
                        }
                    </GridRow>

                    <div class="ms-1">
                        <h6 class="py-1 px-1">
                            ข้อมูลการโอนเงินกู้ กองคลัง โทร. 2135-6 
                        </h6>
                        <h6 class="py-1 px-1">
                            ข้อมูลการชำระยอดกู้/ปิดยอด กองคลัง โทร. 2142
                        </h6>
                        <h6 class="py-1 px-1">
                            ข้อมูลสวัสดิการเงินกู้ กองบริหารทรัพยากรบุคคล โทร. 2053 
                        </h6>
                    </div>
                </Body>
            </Card>
        </GridCol>

        @* วิทยาเขต ภูเก็ต *@
        <GridCol Xxl="8" Xl="12" Lg="12" Md="24" Sm="24" Xs="24">
            <Card Bordered=false Style="@(StaffDetail?.CampId == "03" ? BgColor : "")">
                <Body>
                    <GridRow Gutter="(8,8)">
                        <GridCol Flex="@("auto")">
                            <h6>
                                <strong>
                                    วิทยาเขต ภูเก็ต
                                </strong>
                            </h6>
                        </GridCol>
                        @if (StaffDetail?.CampId == "03")
                        {
                            <GridCol Flex="@("none")">
                                <i class="fa-solid fa-star fa-2xl" style="color: #FFD43B;"></i>
                            </GridCol>
                        }
                    </GridRow>

                    <div class="ms-1">
                        <h6 class="py-1 px-1">
                            ข้อมูลการโอนเงินกู้ งานคลังและทรัพย์สิน โทร. 6072
